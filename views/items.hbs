<div class="row">
  <div class="col-md-12">
    <h2>Items  <a href="/items/add" class="btn btn-success pull-right">Add Item</a></h2>
    <hr />

    <div class="table-responsive text-center">
      <table class="table">
        <tr>
          <th>Item ID</th>        
          <th>Title</th>
          <th>Body</th>
          <th>Post Date</th>         
          <th>Category</th>
          <th>Published</th>
        </tr>
         {{#each items}}
     <tr>
      <td>{{title}}</td>
      <td>{{body}}</td>
      <td>{{postDate}}</td> 
      <td>{{category}}</td>
      <td>{{published}}</td>
      <td>
        <a href="/items/delete/{{id}}" class="btn btn-danger">Remove</a>
      </td>
    </tr>
    {{/each}}
      </table>
    </div>

    {{#unless items}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/unless}}
  </div>
</div>
